{% if product.metafields.custom.show_product_story == 'true' %}
  <div id="floating">
    {% liquid
      # Relative to entrypointsDir
      render 'vite-tag' with 'floating.css'
      render 'vite-tag' with 'floating.jsx'
    %}
  </div>
{% endif %}

<script>
  const home = {{ request.path | json }}
  window.product = {{ product | json }};
  window.productMetafields = {
    showProductStory: {{ product.metafields.custom.show_product_story | json | default: 'false' }}
  };
</script>

{% schema %}
{
  "name": "Floating Story",
  "class": "floating-story-section",
  "target": "section",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "text",
      "id": "story_title",
      "label": "Story Title",
      "default": "Product Story"
    },
    {
      "type": "richtext",
      "id": "default_story",
      "label": "Default Story",
      "default": "<p>Discover the unique story behind this product...</p>"
    }
  ]
}
{% endschema %}